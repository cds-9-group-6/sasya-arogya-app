<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Standard Android Emulator localhost -->
        <domain includeSubdomains="true">localhost</domain>   <!-- For local development if using a hostname -->
        <domain includeSubdomains="true">192.168.0.0/16</domain> <!-- Local network range -->
        <domain includeSubdomains="true">172.16.0.0/12</domain> <!-- Private network range -->
        <domain includeSubdomains="true">10.0.0.0/8</domain> <!-- Private network range -->
        <!-- Add support for common development IPs -->
    </domain-config>

    <!-- Allow cleartext traffic for development/local servers -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>