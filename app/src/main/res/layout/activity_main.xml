<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true">

    <!-- Professional Header Banner -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/professional_header_gradient">

            <!-- Enhanced App Icon with Glow -->
            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="16dp">
                
                <ImageView
                    android:id="@+id/appIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_local_florist"
                    android:background="@drawable/icon_background_gradient"
                    android:padding="10dp"
                    android:scaleType="centerInside" />
            </androidx.cardview.widget.CardView>

            <!-- Enhanced Title Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <TextView
                    android:id="@+id/appTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sasya Arogya"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:shadowColor="#40000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A comprehensive Plant Care Expert"
                    android:textSize="12sp"
                    android:textColor="#E0FFFFFF"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- User Profile Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="3dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">
                
                <ImageButton
                    android:id="@+id/profileBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/icon_background_gradient"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:contentDescription="Agricultural Profile"
                    android:tint="@color/forest_green" />
            </androidx.cardview.widget.CardView>

            <!-- Enhanced Settings Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="44dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#40FFFFFF">
                
                <ImageButton
                    android:id="@+id/settingsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_settings"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:contentDescription="Settings"
                    android:scaleType="centerInside" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Session Management Bar -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#F8F9FA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💬 Sessions:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/forest_green"
                android:layout_marginEnd="8dp" />

            <!-- Session Selector -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:layout_marginEnd="6dp"/>

                    <Spinner
                        android:id="@+id/sessionSelector"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown"
                        android:dropDownWidth="280dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▼"
                        android:textColor="@color/forest_green"
                        android:textSize="10sp"
                        android:alpha="0.7"
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- New Session Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/forest_green"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <ImageButton
                    android:id="@+id/newSessionBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_input_add"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:contentDescription="Start New Session"
                    android:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Enhanced Chat Conversation Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        android:background="@drawable/chat_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/chat_background">

            <!-- Chat Messages RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:scrollbarSize="6dp"
                android:clipToPadding="false"
                android:background="@drawable/chat_background" />

            <!-- Follow-up Buttons Container -->
            <LinearLayout
                android:id="@+id/followUpContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone"
                android:background="@android:color/transparent">

                <TextView
                    android:id="@+id/followUpTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📝 What would you like to know next?"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2D3748"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/followUpChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacing="8dp"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="4dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Modern Upload Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/uploadSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        android:visibility="gone"
        android:background="@drawable/modern_input_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/modern_input_background">

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:layout_marginRight="12dp"
                android:background="@drawable/modern_button"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/imageFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📷 Image attached"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2D3748"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to analyze"
                    android:textSize="12sp"
                    android:textColor="#718096"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/removeImageBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_delete"
                android:background="@drawable/modern_button"
                android:padding="8dp"
                android:contentDescription="Remove image"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Modern Bottom Input Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="6dp"
        android:background="@drawable/modern_input_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/modern_input_background">

            <ImageButton
                android:id="@+id/uploadBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_camera"
                android:background="@drawable/modern_button"
                android:padding="12dp"
                android:layout_marginRight="8dp"
                android:contentDescription="Upload photo"/>

            <!-- Enhanced input container with inline image support -->
            <LinearLayout
                android:id="@+id/inputContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@android:color/transparent">
                
                <!-- Inline image preview container -->
                <LinearLayout
                    android:id="@+id/inlineImageContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/inline_image_background"
                    android:padding="6dp"
                    android:visibility="gone">
                    
                    <ImageView
                        android:id="@+id/inlineImagePreview"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/modern_button"
                        android:layout_marginRight="6dp"/>
                    
                    <TextView
                        android:id="@+id/inlineImageLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📷 Image"
                        android:textSize="12sp"
                        android:textColor="#4A5568"
                        android:layout_marginRight="6dp"/>
                    
                    <ImageButton
                        android:id="@+id/inlineRemoveBtn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_delete"
                        android:background="@android:color/transparent"
                        android:padding="2dp"
                        android:scaleType="centerInside"
                        android:contentDescription="Remove image"/>
                        
                </LinearLayout>

                <EditText
                    android:id="@+id/messageInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ask about your plants... 🌱"
                    android:padding="16dp"
                    android:background="@android:color/transparent"
                    android:maxLines="4"
                    android:inputType="textMultiLine|textCapSentences"
                    android:textSize="16sp"
                    android:textColor="#2D3748"
                    android:textColorHint="#A0AEC0"
                    android:minHeight="50dp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/sendBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_send"
                android:background="@drawable/modern_button"
                android:padding="12dp"
                android:layout_marginLeft="8dp"
                android:contentDescription="Send message"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
