<?xml version="1.0" encoding="utf-8"?>
<!-- Professional Insurance Certificate Card Layout -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/insuranceCertificateCardWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/insurance_card_background"
        android:padding="20dp"
        android:paddingBottom="40dp">

        <!-- Certificate Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Certificate Icon -->
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/insurance_icon_background"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“„"
                    android:textSize="20sp"
                    android:textColor="@color/clean_white" />
            </LinearLayout>

            <!-- Certificate Title Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ INSURANCE CERTIFICATE"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/earth_text_primary"
                    android:letterSpacing="0.02"
                    android:singleLine="true"
                    android:ellipsize="none" />

                <TextView
                    android:id="@+id/certificatePolicyId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Policy ID: POL-AB8E7A02"
                    android:textSize="13sp"
                    android:textColor="@color/earth_text_secondary"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Certificate Details Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/premium_summary_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Policy Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Policy ID"
                    android:textSize="15sp"
                    android:textColor="@color/earth_text_primary" />

                <TextView
                    android:id="@+id/certificatePolicyIdValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POL-AB8E7A02"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2" />
            </LinearLayout>

            <!-- Company Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¢ Insurance Company"
                    android:textSize="15sp"
                    android:textColor="@color/earth_text_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/certificateCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tamil Nadu Crop Insurance Ltd"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/earth_text_primary"
                    android:singleLine="true"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Coverage Amount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/farmer_contribution_background"
                android:padding="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° Total Coverage"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/earth_text_primary" />

                <TextView
                    android:id="@+id/certificateTotalCoverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹18,211.50"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:background="@drawable/farmer_amount_highlight"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Detailed Breakdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Certificate Details"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/earth_text_primary"
                android:layout_marginBottom="12dp" />

            <!-- Farmer Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farmer:"
                    android:textSize="14sp"
                    android:textColor="@color/earth_text_secondary"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/certificateFarmerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Farmer"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/earth_text_primary" />
            </LinearLayout>

            <!-- Crop Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crop:"
                    android:textSize="14sp"
                    android:textColor="@color/earth_text_secondary"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/certificateCropInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Potato â€¢ Tamil Nadu â€¢ 0.4 hectares"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/earth_text_primary" />
            </LinearLayout>

            <!-- Premium Breakdown -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium:"
                    android:textSize="14sp"
                    android:textColor="@color/earth_text_secondary"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/certificatePremiumBreakdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â‚¹1,517.62 (Farmer) + â‚¹4,552.88 (Government)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/earth_text_primary" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/viewCertificateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“„ View Certificate"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/clean_white"
                    android:background="@drawable/primary_button_background"
                    android:padding="16dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
