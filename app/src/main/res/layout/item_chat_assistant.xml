<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp">

        <!-- Assistant Message Bubble -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:cardCornerRadius="18dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@color/assistant_message_bg">

                <!-- WhatsApp-style subtle header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¤– Sasya Arogya"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/forest_green"
                    android:alpha="0.8"
                    android:paddingStart="4dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginBottom="4dp" />

                <!-- Professional State Indicator -->
                <TextView
                    android:id="@+id/stateIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROCESSING"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/banner_primary_text"
                    android:background="@drawable/state_indicator_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.1"
                    android:visibility="gone" />

                <!-- Message Text -->
                <TextView
                    android:id="@+id/messageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assistant message"
                    android:textSize="15sp"
                    android:textColor="@color/assistant_text"
                    android:lineSpacingExtra="2dp"
                    android:maxWidth="380dp" />

                <!-- Disease Card Container -->
                <LinearLayout
                    android:id="@+id/diseaseCardContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/disease_card_background"
                    android:padding="16dp"
                    android:visibility="gone">

                    <!-- Disease Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <!-- Warning Icon -->
                        <LinearLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/warning_icon_background"
                            android:gravity="center"
                            android:layout_marginEnd="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âš "
                                android:textSize="16sp"
                                android:textColor="@color/clean_white" />
                        </LinearLayout>

                        <!-- Disease Title -->
                        <TextView
                            android:id="@+id/diseaseTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Disease Detected"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/earth_text_primary"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                    <!-- Disease Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <!-- Confidence -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Confidence: "
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/earth_text_primary" />

                            <TextView
                                android:id="@+id/diseaseConfidence"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="87%"
                                android:textSize="14sp"
                                android:textColor="@color/earth_text_primary" />
                        </LinearLayout>

                        <!-- Severity -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Severity: "
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/earth_text_primary" />

                            <TextView
                                android:id="@+id/diseaseSeverity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mild to Moderate"
                                android:textSize="14sp"
                                android:textColor="@color/earth_text_primary" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Disease Content (Symptoms and Treatment) -->
                    <TextView
                        android:id="@+id/diseaseContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/earth_text_primary"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

                <!-- Healthy Plant Card Container -->
                <LinearLayout
                    android:id="@+id/healthyCardContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/healthy_card_background"
                    android:padding="16dp"
                    android:visibility="gone">

                    <!-- Healthy Header -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <!-- Checkmark Icon -->
                        <LinearLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/healthy_icon_background"
                            android:gravity="center"
                            android:layout_marginEnd="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœ“"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/clean_white" />
                        </LinearLayout>

                        <!-- Healthy Title -->
                        <TextView
                            android:id="@+id/healthyTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Healthy Plant Detected"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/earth_text_primary" />

                    </LinearLayout>

                    <!-- Healthy Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <!-- Confidence -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Confidence: "
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/earth_text_primary" />

                            <TextView
                                android:id="@+id/healthyConfidence"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="95%"
                                android:textSize="14sp"
                                android:textColor="@color/earth_text_primary" />
                        </LinearLayout>

                        <!-- Plant Status -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status: "
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/earth_text_primary" />

                            <TextView
                                android:id="@+id/healthyStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Excellent Health"
                                android:textSize="14sp"
                                android:textColor="@color/forest_green" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Healthy Content (Care recommendations) -->
                    <TextView
                        android:id="@+id/healthyContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/earth_text_primary"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

                <!-- Attention Overlay Container -->
                <LinearLayout
                    android:id="@+id/attentionOverlayContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ AI Diagnostic Visualization"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2D3748"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/overlayDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI attention heatmap with blue/yellow highlights â€¢ Tap to zoom &amp; inspect"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <!-- Attention Overlay Image -->
                    <ImageView
                        android:id="@+id/attentionOverlayImage"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:background="@drawable/modern_card_background"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="AI attention overlay showing diagnostic focus areas" />

                </LinearLayout>

                <!-- Feedback Buttons -->
                <LinearLayout
                    android:id="@+id/feedbackContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="start">

                    <ImageButton
                        android:id="@+id/thumbsUpButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_thumb_up"
                        android:contentDescription="Thumbs up"
                        android:scaleType="centerInside"
                        android:padding="6dp"
                        android:layout_marginEnd="8dp" />

                    <ImageButton
                        android:id="@+id/thumbsDownButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_thumb_down"
                        android:contentDescription="Thumbs down"
                        android:scaleType="centerInside"
                        android:padding="6dp" />

                </LinearLayout>

                <!-- Follow-up Container (Inside the message card for WhatsApp style) -->
                <LinearLayout
                    android:id="@+id/followUpContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ What would you like to know next?"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2D3748"
                        android:layout_marginBottom="8dp" />

                    <!-- Follow-up Chips -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/followUpChipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacing="8dp"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="4dp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/messageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout>
