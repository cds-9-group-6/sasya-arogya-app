                    android:id="@+id/insuranceCropInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Potato â€¢ Tamil Nadu â€¢ 3.0 hectares"
                    android:textSize="13sp"
                    android:textColor="@color/earth_text_secondary"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Premium Calculation Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/premium_summary_background"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <!-- Sum Insured (Coverage Amount) - Most Important -->
            <LinearLayout
                android:id="@+id/sumInsuredContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/sum_insured_card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’° Sum Insured"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/clean_white" />

                    <TextView
                        android:id="@+id/sumInsuredAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹42,085.60"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/clean_white" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total coverage amount for your crop"
                    android:textSize="12sp"
                    android:textColor="@color/clean_white"
                    android:alpha="0.8" />
            </LinearLayout>

            <!-- Financial Breakdown Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/financial_breakdown_background"
                android:padding="16dp">

                <!-- Total Premium Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="ðŸ’³"
                            android:textSize="16sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Premium"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/earth_text_primary"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/totalPremiumAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹7,690.93"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:background="@drawable/amount_badge_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp" />
                </LinearLayout>

                <!-- Government Subsidy Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="ðŸ›ï¸"
                            android:textSize="16sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Government Subsidy"
                            android:textSize="16sp"
                            android:textColor="@color/earth_text_primary"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/subsidyAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹7,248.50"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:background="@drawable/subsidy_badge_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp" />
                </LinearLayout>

                <!-- Farmer Contribution Row (Highlighted) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/farmer_contribution_highlight_background"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

