                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Insurance Provider"
                            android:textSize="12sp"
                            android:textColor="@color/earth_text_secondary" />

                        <TextView
                            android:id="@+id/insuranceCompanyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SBI GENERAL INSURANCE"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/earth_text_primary" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Disease Context -->
                <LinearLayout
                    android:id="@+id/diseaseInfoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/disease_breakdown_item_background"
                    android:padding="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ðŸ¦ "
                        android:textSize="14sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disease Detected"
                            android:textSize="12sp"
                            android:textColor="@color/earth_text_secondary" />

                        <TextView
                            android:id="@+id/diseaseContext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mosaic Virus"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#FF5722" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Action Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/applyInsuranceButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ›¡ï¸ Apply for Insurance"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/clean_white"
                    android:background="@drawable/primary_button_background"
                    android:padding="16dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
