<?xml version="1.0" encoding="utf-8"?>
<!-- Professional Insurance Premium Card Layout -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/insuranceCardWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/insurance_card_background"
        android:padding="20dp">

        <!-- Insurance Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Insurance Icon -->
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/insurance_icon_background"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🛡️"
                    android:textSize="20sp"
                    android:textColor="@color/clean_white" />
            </LinearLayout>

            <!-- Insurance Title Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💰 CROP INSURANCE PREMIUM"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/earth_text_primary"
                    android:letterSpacing="0.05" />

                <TextView
                    android:id="@+id/insuranceCropInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Potato • Tamil Nadu • 3.0 hectares"
                    android:textSize="13sp"
                    android:textColor="@color/earth_text_secondary"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Premium Calculation Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/premium_summary_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Total Premium (Most Important) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Total Premium"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/earth_text_primary" />

                <TextView
                    android:id="@+id/totalPremiumAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹40,702.76"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:background="@drawable/amount_highlight_background"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Government Subsidy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="🏛️ Government Subsidy"
                    android:textSize="15sp"
                    android:textColor="@color/earth_text_primary" />

                <TextView
                    android:id="@+id/subsidyAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹36,632.48"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />
            </LinearLayout>

            <!-- Farmer Contribution (What farmer pays) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/farmer_contribution_background"
                android:padding="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="👨‍🌾 Your Contribution"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/earth_text_primary" />

                <TextView
                    android:id="@+id/farmerContributionAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹4,070.28"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:background="@drawable/farmer_amount_highlight"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Detailed Breakdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📊 Premium Breakdown"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/earth_text_primary"
                android:layout_marginBottom="12dp" />

            <!-- Area Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Area:"
                    android:textSize="14sp"
                    android:textColor="@color/earth_text_secondary" />

                <TextView
                    android:id="@+id/areaDetails"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="3.0 hectares"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/earth_text_primary" />
            </LinearLayout>

            <!-- Premium per hectare -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Rate:"
                    android:textSize="14sp"
                    android:textColor="@color/earth_text_secondary" />

                <TextView
                    android:id="@+id/premiumPerHectare"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="₹13,567.59 per hectare"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/earth_text_primary" />
            </LinearLayout>

            <!-- Disease Context -->
            <LinearLayout
                android:id="@+id/diseaseInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Disease:"
                    android:textSize="14sp"
                    android:textColor="@color/earth_text_secondary" />

                <TextView
                    android:id="@+id/diseaseContext"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Mosaic Virus"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/learnMoreButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📋 Learn More"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/forest_green"
                    android:background="@drawable/button_ripple"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <TextView
                    android:id="@+id/applyInsuranceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🛡️ Apply Now"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/clean_white"
                    android:background="@drawable/primary_button_background"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
