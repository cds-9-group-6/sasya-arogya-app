                            android:text="Your Contribution"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/earth_text_primary"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/farmerContributionAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹442.44"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FF5722"
                        android:background="@drawable/farmer_amount_badge_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Detailed Breakdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/detailed_breakdown_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="ðŸ“Š"
                    android:textSize="16sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium Breakdown"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/earth_text_primary"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Breakdown Items Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Area Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/breakdown_item_background"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ðŸ“"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coverage Area"
                            android:textSize="12sp"
                            android:textColor="@color/earth_text_secondary" />

                        <TextView
                            android:id="@+id/areaDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.4 hectares"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/earth_text_primary" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Premium per hectare -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/breakdown_item_background"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ðŸ’°"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate per Hectare"
                            android:textSize="12sp"
                            android:textColor="@color/earth_text_secondary" />

                        <TextView
                            android:id="@+id/premiumPerHectare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹19,227.33 per hectare"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/earth_text_primary" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Insurance Company -->
                <LinearLayout
                    android:id="@+id/companyInfoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/breakdown_item_background"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
