<?xml version="1.0" encoding="utf-8"?>
<!-- Individual Quick Action Button Layout -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false">

    <TextView
        android:id="@+id/quickActionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="52dp"
        android:background="@drawable/quick_action_button_background"
        android:text="ðŸ“¸ Analyze Plant Photo"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/followup_chip_text"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:singleLine="false"
        android:maxLines="3"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.1" />

</androidx.cardview.widget.CardView>
