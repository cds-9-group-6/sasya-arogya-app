<?xml version="1.0" encoding="utf-8"?>
<!-- Professional insurance card background with blue theme -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Drop shadow for depth -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#301976D2" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Left blue border for insurance theme -->
    <item android:left="0dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#1976D2" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    
    <!-- Subtle background tint -->
    <item android:left="8dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#E3F2FD" />
            <corners 
                android:topRightRadius="10dp"
                android:bottomRightRadius="10dp" />
            <stroke 
                android:width="1dp"
                android:color="#BBDEFB" />
        </shape>
    </item>
    
    <!-- Main card background with subtle gradient -->
    <item android:left="8dp" android:right="2dp" android:bottom="2dp" android:top="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/clean_white"
                android:endColor="#FAFBFF"
                android:angle="90" />
            <corners 
                android:topRightRadius="10dp"
                android:bottomRightRadius="10dp" />
        </shape>
    </item>
    
</layer-list>
