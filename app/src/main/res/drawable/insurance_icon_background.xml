<?xml version="1.0" encoding="utf-8"?>
<!-- Insurance shield icon background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Drop shadow for depth -->
    <item android:top="1dp" android:left="1dp">
        <shape android:shape="oval">
            <solid android:color="#401976D2" />
        </shape>
    </item>
    
    <!-- Main insurance icon background -->
    <item android:right="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#1976D2"
                android:endColor="#1565C0"
                android:angle="45" />
            <stroke 
                android:width="1dp"
                android:color="#0D47A1" />
        </shape>
    </item>
    
</layer-list>
