<?xml version="1.0" encoding="utf-8"?>
<!-- Enhanced warning icon circular background with more pronounced styling -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Drop shadow for depth -->
    <item android:top="1dp" android:left="1dp">
        <shape android:shape="oval">
            <solid android:color="#40FF7043" />
        </shape>
    </item>
    
    <!-- Main warning icon background -->
    <item android:right="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#FF7043"
                android:endColor="#FF5722"
                android:angle="45" />
            <stroke 
                android:width="1dp"
                android:color="#E64A19" />
        </shape>
    </item>
    
</layer-list>
